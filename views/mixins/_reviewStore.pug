mixin reviewStore(store)

  form(action=`/review/${store._id}/` method="POST")
    textarea(name="text" placeholder='Did you try this place? Have somethingto say? Leave the review...')
    .reviewer__meta
      .reviewer__stars
        each num in [5,4,3,2,1]
          input(type="radio" required id=`star${num}` name='rating' value=num) 
          label(for=`star${num}`) #{num}Stars
      input.button(type="submit" value='Submit Review')